configuration {
  theme: "~/.config/rofi/slate.rasi";
  modi: "combi,drun,calc";
  width: 40;
  lines: 10;
  font: "Iosevka 12";
  show-icons: false;
  terminal: "alacritty";
  ssh-client: "ssh";
  ssh-command: "{terminal} {ssh-client} {host} [-p {port}]";
  run-command: "sh -c '{cmd}'";
  run-list-command: ". ~/.config/rofi/scripts/alias.sh";
  run-shell-command: "fish -c '{cmd} | rofi -dmenu'";
  sort: true;
  sorting-method: "fzf";
  combi-modi: "window,drun";
  matching: "fuzzy";
/*	separator-style: "dash";*/
	hide-scrollbar: true;
  dpi: 1;
  scroll-method: 1;
}
