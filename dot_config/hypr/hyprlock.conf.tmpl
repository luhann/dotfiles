general {
  hide_cursor = true
  fail_timeout = 1000
}

background {
    monitor =
    path = ~/onedrive/wallpapers/redspiderlily.png
    color = rgba({{ .colors.base | replace "#" "" }}ff)  # Full opacity
    blur_passes = 2
}

# DATE
label {
  monitor =
  text = cmd[update:1000] echo "$(date "+%F %T %z")"
  color = rgba({{ .colors.cyber_red | replace "#" "" }}80)
  font_size = 22
  font_family = Monaspace Krypton Var
  position = 2%, 4%
  halign = left 
  valign = left 
}

