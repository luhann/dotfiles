# INPUT FIELD
input-field {
    monitor =
    size = 20%, 5%
    outline_thickness = 0
    dots_text_format = *
    dots_size = 0.75
    dots_spacing = 0.25
    inner_color = rgba({{ .colors.surface0 | replace "#" "" }}1A)
    font_color = rgba({{ .colors.cyber_red | replace "#" "" }}cc)
    fail_text = <span weight="bold">ACCESS DENIED</span>
    fail_color = rgba({{ .colors.error | replace "#" "" }}ff)      # Full opacity
    placeholder_text = 
}

