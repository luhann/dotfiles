[color]
background = #D9222222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
glyph-bg    = #de0a0a0a
module-bg   = #f00a0a0a
selected-bg = #dc1a1a1a
icon-fg = #c8c8c8
red     = #821717
orange  = #824517


